<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathas.fragmentsimplificado.MainActivity">



    <LinearLayout
        android:id="@+id/fragmento1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:layout_weight="5"
        android:background="#dddddd"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentElemento"
            android:name="com.example.jonathas.fragmentsimplificado.Fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/fragmento2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="5"
        android:layout_marginTop="100dp"
        android:background="#bbbbbb"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment2Element"
            android:name="com.example.jonathas.fragmentsimplificado.Fragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" />

    </LinearLayout>

</LinearLayout>
